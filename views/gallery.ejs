<!-- Menyertakan file header.ejs dengan variabel lokal -->
<%- include('header.ejs', { pageTitle: 'Halaman Dashboard' }) %>

<!-- Isi utama untuk halaman register -->
<main class="w-full">
  <%- include('sidebar.ejs') %>

  <div class="p-4 sm:ml-64 mt-14">
    <h1>Image Gallery</h1>

    <% if (images && images.length > 0) { %>
    <div class="image-container">
      <% images.forEach(image => { %>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <div>
          <img
            class="h-auto max-w-full rounded-lg"
            src="<%= image.url %>"
            alt="<%= image.description %>"
          />
        </div>
      </div>

      <% }); %>
    </div>
    <% } else { %>
    <p>No images available.</p>
    <% } %>
  </div>
</main>

<!-- Menyertakan file footer.ejs -->
<%- include('footer.ejs') %>
